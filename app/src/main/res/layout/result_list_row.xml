<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/result_list_iconSize"
        android:layout_height="@dimen/result_list_iconSize"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_date" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <com.example.paul.cone_trading.RobotoTextViewBold
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="#title"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold" />

        <com.example.paul.cone_trading.RobotoTextViewRegular
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="@string/item_description"
            android:textColor="@color/desc_fontColor"
            android:textSize="@dimen/micro_text"
            android:textStyle="normal" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp">

                    <com.example.paul.cone_trading.RobotoTextViewRegular
                        android:id="@+id/typeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:text="Type: "
                        android:textColor="@color/desc_fontColor"
                        android:textSize="@dimen/micro_text"
                        android:textStyle="normal" />

                    <com.example.paul.cone_trading.RobotoTextViewRegular
                        android:id="@+id/typeData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:text="#type"
                        android:textColor="@color/desc_fontColor"
                        android:textSize="@dimen/micro_text"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp">

                    <com.example.paul.cone_trading.RobotoTextViewRegular
                        android:id="@+id/makerLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:text="Maker: "
                        android:textColor="@color/desc_fontColor"
                        android:textSize="@dimen/micro_text"
                        android:textStyle="normal" />

                    <com.example.paul.cone_trading.RobotoTextViewRegular
                        android:id="@+id/makerData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:text="#maker"
                        android:textColor="@color/desc_fontColor"
                        android:textSize="@dimen/micro_text"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp">

                    <com.example.paul.cone_trading.RobotoTextViewRegular
                        android:id="@+id/modelLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:text="Model: "
                        android:textColor="@color/desc_fontColor"
                        android:textSize="@dimen/micro_text"
                        android:textStyle="normal" />

                    <com.example.paul.cone_trading.RobotoTextViewRegular
                        android:id="@+id/modelData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:text="#model"
                        android:textColor="@color/desc_fontColor"
                        android:textSize="@dimen/micro_text"
                        android:textStyle="normal" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/result_row_text_padding_left">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp">

                    <com.example.paul.cone_trading.RobotoTextViewRegular
                        android:id="@+id/sizeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:text="Size: "
                        android:textColor="@color/desc_fontColor"
                        android:textSize="@dimen/micro_text"
                        android:textStyle="normal" />

                    <com.example.paul.cone_trading.RobotoTextViewRegular
                        android:id="@+id/sizeData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:text="#size"
                        android:textColor="@color/desc_fontColor"
                        android:textSize="@dimen/micro_text"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp">

                    <com.example.paul.cone_trading.RobotoTextViewRegular
                        android:id="@+id/categoryLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:text="Category: "
                        android:textColor="@color/desc_fontColor"
                        android:textSize="@dimen/micro_text"
                        android:textStyle="normal" />

                    <com.example.paul.cone_trading.RobotoTextViewRegular
                        android:id="@+id/categoryData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:text="#category"
                        android:textColor="@color/desc_fontColor"
                        android:textSize="@dimen/micro_text"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.example.paul.cone_trading.RobotoButtonRegular
                        android:layout_width="@dimen/currency_width"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/php_currency_style"
                        android:text="PHP"
                        android:textSize="@dimen/micro_text" />

                    <com.example.paul.cone_trading.RobotoTextViewRegular
                        android:id="@+id/pesoPriceData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:text="123,123,123"
                        android:textColor="@color/desc_fontColor"
                        android:textSize="@dimen/micro_text"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/jpy_marginLeft"
                        android:orientation="horizontal">

                        <com.example.paul.cone_trading.RobotoButtonRegular
                            android:layout_width="@dimen/currency_width"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/jpy_currency_style"
                            android:text="JPY"
                            android:textSize="@dimen/micro_text" />

                        <com.example.paul.cone_trading.RobotoTextViewRegular
                            android:id="@+id/yenPriceData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:text="123,123,123"
                            android:textColor="@color/desc_fontColor"
                            android:textSize="@dimen/micro_text"
                            android:textStyle="normal" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/result_row_text_padding_left">


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>